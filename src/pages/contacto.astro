---
import Layout from '../layouts/Layout.astro';

const currentLocale = Astro.currentLocale || 'es';

const content = {
  es: {
    title: 'Contacto',
    subtitle: 'Estamos aquí para ayudarte',
    name: 'Nombre',
    email: 'Correo electrónico',
    phone: 'Teléfono',
    message: 'Mensaje',
    submit: 'Enviar mensaje',
    address: 'Dirección',
    contact: 'Información de contacto',
    schedule: 'Horario de atención',
  },
  ca: {
    title: 'Contacte',
    subtitle: 'Som aquí per ajudar-te',
    name: 'Nom',
    email: 'Correu electrònic',
    phone: 'Telèfon',
    message: 'Missatge',
    submit: 'Enviar missatge',
    address: 'Adreça',
    contact: 'Informació de contacte',
    schedule: 'Horari d\'atenció',
  },
  en: {
    title: 'Contact',
    subtitle: 'We\'re here to help',
    name: 'Name',
    email: 'Email',
    phone: 'Phone',
    message: 'Message',
    submit: 'Send message',
    address: 'Address',
    contact: 'Contact information',
    schedule: 'Office hours',
  },
};

const t = content[currentLocale];

const title = `${t.title} | PsicoCorts`;
const description = 'Contacta con PsicoCorts para solicitar una cita o más información sobre nuestros servicios de psicología en Les Corts, Barcelona.';
---

<Layout title={title} description={description}>
  <div class="bg-white">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-lg mx-auto md:max-w-none md:grid md:grid-cols-2 md:gap-8">
        <div>
          <h2 class="text-2xl font-serif font-bold text-gray-900 sm:text-3xl">{t.contact}</h2>
          <div class="mt-3">
            <p class="text-lg text-gray-500">
              Av. de Madrid, 123<br />
              08028 Barcelona
            </p>
          </div>
          <div class="mt-9">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div class="ml-3 text-base text-gray-500">
                <p>933 303 916</p>
              </div>
            </div>
            <div class="mt-6 flex">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="ml-3 text-base text-gray-500">
                <p>info@psicocorts.vercel.app</p>
              </div>
            </div>
          </div>
        </div>
        <div class="mt-12 sm:mt-16 md:mt-0">
          <h2 class="text-2xl font-serif font-bold text-gray-900 sm:text-3xl">{t.schedule}</h2>
          <div class="mt-3">
            <p class="text-lg text-gray-500">
              Lunes - Viernes<br />
              9:00 - 20:00
            </p>
          </div>
        </div>
      </div>
      <div class="mt-12">
        <form action="#" method="POST" class="grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-8">
          <div class="sm:col-span-2">
            <label for="name" class="block text-sm font-medium text-gray-700">{t.name}</label>
            <div class="mt-1">
              <input type="text" name="name" id="name" autocomplete="name" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500">
            </div>
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">{t.email}</label>
            <div class="mt-1">
              <input type="email" name="email" id="email" autocomplete="email" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500">
            </div>
          </div>
          <div>
            <label for="phone" class="block text-sm font-medium text-gray-700">{t.phone}</label>
            <div class="mt-1">
              <input type="tel" name="phone" id="phone" autocomplete="tel" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500">
            </div>
          </div>
          <div class="sm:col-span-2">
            <label for="message" class="block text-sm font-medium text-gray-700">{t.message}</label>
            <div class="mt-1">
              <textarea id="message" name="message" rows="4" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"></textarea>
            </div>
          </div>
          <div class="sm:col-span-2">
            <button type="submit" class="w-full inline-flex items-center justify-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
              {t.submit}
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</Layout></content>