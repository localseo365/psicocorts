---
import Layout from '../../layouts/Layout.astro';
import ContactCTA from '../../components/ContactCTA.astro';

const currentLocale = Astro.currentLocale || 'es';

const content = {
  es: {
    title: 'Blog',
    description: 'Recursos y artículos sobre salud mental',
    comingSoon: 'Próximamente nuevos artículos',
  },
  ca: {
    title: 'Blog',
    description: 'Recursos i articles sobre salut mental',
    comingSoon: 'Properament nous articles',
  },
  en: {
    title: 'Blog',
    description: 'Mental health resources and articles',
    comingSoon: 'New articles coming soon',
  },
};

const t = content[currentLocale];

const title = `${t.title} | PsicoCorts`;
const description = 'Blog con recursos y artículos sobre psicología y salud mental por PsicoCorts.';
---

<Layout title={title} description={description}>
  <div class="bg-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-3xl font-serif font-bold text-gray-900 sm:text-4xl">{t.title}</h1>
        <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">{t.description}</p>
      </div>
      <div class="mt-12 text-center">
        <p class="text-lg text-gray-500">{t.comingSoon}</p>
      </div>
    </div>
  </div>
  <ContactCTA />
</Layout>